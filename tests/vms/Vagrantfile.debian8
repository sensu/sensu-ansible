############
# Debian 8 #
############
Vagrant.configure(2) do | config |
  config.ssh.insert_key = false
  config.ssh.username = 'vagrant'
  config.vm.provider :virtualbox do |vb|
    vb.customize ["modifyvm", :id, "--memory", "2048"]
  end

  config.vm.define "debian8" do |debian8|
    debian8.vm.hostname = "debian8.dev"
    debian8.vm.box = "debian/jessie64"
    debian8.vm.network :private_network, ip: "192.168.40.5"
    debian8.vm.network "forwarded_port", guest: 3000, host: 3002

    # Ansible
    config.vm.provision "ansible" do |ansible|
      ansible.groups = {
        "sensu_masters" => ["debian8"],
        "sensu_rabbitmq_servers" => ["debian8"],
        "sensu_redis_servers" => ["debian8"],
      }

      ansible.extra_vars = {
        sensu_dynamic_data_store: "data/dynamic",
        sensu_rabbitmq_host: "192.168.40.5",
        sensu_rabbitmq_server: true,
        sensu_redis_host: "192.168.40.5",
        sensu_redis_server: true,
        sensu_api_host: "192.168.40.5",
        sensu_api_user_name: "admin",
        sensu_api_password: "admin",
        sensu_include_plugins: false,
        sensu_include_dashboard: true,
        sensu_master: true,
        sensu_uchiwa_dc_name: "vagrant",
        sensu_uchiwa_users: [{"username": "admin", "password": "admin"}]
      }

      ansible.sudo = true
      ansible.playbook = "provision.yml"
    end
  end
end
